{{> header}}

    <!-- Page Content -->
    <div class="container-fluid">
        <h1 class="mt-5">List of tables</h1>

        <i class="fa fa-plus btn btn-success" id="addBtn"></i>
        <i class="btn btn-default btn-sm" id="deleteBtn"></i>
        <i class="btn btn-default btn-sm" id="deleteBtn"></i>

        <table id="dataTable" class="display table-hover">
            <thead>
                <tr>
                    <th>Table Number (ID)</th>
                    <th>Capacity</th>
                    <th>Options</th>
                </tr>
            </thead>
        </table>

        <div class="modal fade" id="modal" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" onclick="deselect()" data-dismiss="modal">&times;</button>
                        <h3 class="modal-title" id="modal-title">Table</h3>
                    </div>
                    <div class="modal-body">
                        <form id="modalForm" enctype='text/plain'>
                            ID:<br>
                            <input type='text' class="form-control" name='id' id="id"><br>
                            Capacity:<br>
                            <input type='text' class="form-control" name='capacity' id="capacity"><br>
                         </form>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-success" id="btnsubmit">Submit</button>
                        <a href="#" id="confirmbutton" data-title="Are you sure" data-trigger="focus" data-toggle="clickover" data-placement="top" class="btn btn-danger">Delete</a>
                        <button type="button" class="btn btn-default" id="btnclose" onclick="deselect()" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>


    </div>
    <!-- /.container -->
{{> footer}}